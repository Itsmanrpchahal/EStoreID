<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/releted_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/shape"></ImageView>

    <TextView
        android:id="@+id/releted_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/releted_image"
        android:layout_marginTop="@dimen/defaultmargin"
        android:text="Mxson Men’s Ultra"
        android:fontFamily="@font/quicksand"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/normaltext"></TextView>

    <TextView
        android:id="@+id/related_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/releted_product_name"
        android:layout_marginTop="5dp"
        android:text="₹50.00"
        android:textSize="@dimen/normaltext"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/quicksandbold"></TextView>

</RelativeLayout>