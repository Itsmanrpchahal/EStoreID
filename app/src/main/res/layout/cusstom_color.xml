<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_dp10">



        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/color_imageview"
            android:layout_width="40dp"
            android:layout_height="@dimen/margin_dp40"
            android:scaleType="centerCrop"
            app:riv_oval="true"
            app:riv_corner_radius="@dimen/margin_dp10"
            android:layout_marginLeft="@dimen/margin_dp10"
            android:layout_marginRight="@dimen/margin_dp10"
            android:layout_marginTop="@dimen/margin_dp10"
            android:background="#00FFFFFF"
            android:layout_margin="@dimen/margin_dp5"></com.makeramen.roundedimageview.RoundedImageView>

</RelativeLayout>