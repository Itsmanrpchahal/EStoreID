<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardElevation="2dp"
            app:cardCornerRadius="10dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    android:id="@+id/vendor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vegitable Vendor"
                    android:fontFamily="@font/quicksand"
                    android:textSize="@dimen/textsize_sp16"
                    android:textColor="@color/colorBlack">

                </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/vendor_name"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/vendor_loc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textsize_sp12"
                        android:text="Mohali, India"></TextView>

                    <TextView
                        android:id="@+id/vendor_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Timing: 7:30 - 20:00"
                        android:textSize="@dimen/textsize_sp12"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="5dp"></TextView>


                </LinearLayout>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/round_blue_bt"
        android:layout_alignParentRight="true"
        android:text="Follow"
        android:textSize="@dimen/smalltext"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true">

    </Button>




</RelativeLayout>