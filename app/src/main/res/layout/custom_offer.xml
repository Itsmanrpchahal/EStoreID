<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_dp10"
        android:layout_margin="@dimen/margin_dp10"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="@dimen/margin_dp8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/normaltext"
                android:fontFamily="@font/latoregular"
                android:text="Coupen name"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/defaultmargin"
                android:layout_marginLeft="@dimen/defaultmargin"
                android:layout_toLeftOf="@id/viewtandc"></TextView>



            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorgrey"
                android:textSize="@dimen/textsize_sp12"
                android:textAlignment="viewStart"
                android:gravity="start"
                android:layout_alignParentStart="true"
                android:layout_below="@id/text1"
                android:fontFamily="@font/latoregular"
                android:text="Coupen Discr"
                android:layout_marginLeft="@dimen/defaultmargin"
                android:layout_toLeftOf="@id/viewtandc"></TextView>

            <TextView
                android:id="@+id/expiredate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorgrey"
                android:textSize="@dimen/margin_dp10"
                android:textAlignment="viewStart"
                android:gravity="start"
                android:layout_alignParentStart="true"
                android:layout_below="@id/text2"
                android:layout_marginTop="@dimen/margin_dp12"
                android:fontFamily="@font/latoregular"
                android:text="Expire Date"
                android:layout_marginLeft="@dimen/defaultmargin"
                android:layout_toLeftOf="@id/viewtandc"></TextView>




            <TextView
                android:id="@+id/viewtandc"
                android:layout_alignParentRight="true"
                android:layout_below="@id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tc"
                android:textSize="@dimen/margin_dp15"
                android:textColor="@color/colorTheme"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/defaultmargin"
                ></TextView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>