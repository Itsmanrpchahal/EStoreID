<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:id="@+id/layout_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp">

                <ImageView
                    android:id="@+id/img_store"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_vender" />

                <TextView
                    android:id="@+id/tv_venderName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/img_store"
                    android:fontFamily="@font/quicksandbold"
                    android:text="Vegitable Vender"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_venderAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_venderName"
                    android:layout_alignLeft="@+id/tv_venderName"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/img_store"
                    android:fontFamily="@font/quicksand"
                    android:text="Mohali, India"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_venderTimming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_venderAddress"
                    android:layout_alignLeft="@+id/tv_venderName"
                    android:layout_toRightOf="@+id/img_store"
                    android:fontFamily="@font/quicksand"
                    android:text="Timing: 7:30-20:00"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_venderTimming"
                    android:layout_alignLeft="@+id/tv_venderName"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/img_store"
                    android:fontFamily="@font/quicksandbold"
                    android:text="4.8"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_totalRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_venderTimming"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/tv_rating"
                    android:fontFamily="@font/quicksand"
                    android:text="(4012 ratings)"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/btn_payment"
                    android:layout_width="70dp"
                    android:layout_height="18dp"
                    android:layout_below="@+id/tv_venderTimming"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/round_button_theam"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="@string/unfollow"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="8dp">

                </TextView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>
