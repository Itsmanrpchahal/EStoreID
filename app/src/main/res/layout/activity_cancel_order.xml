<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".views.CancelOrderActivity">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/toolbar_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include_toolbar"
        android:layout_margin="25dp">

        <ImageView
            android:id="@+id/img_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_q" />

        <TextView
            android:id="@+id/tv_cancel_Order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_question"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/quicksandbold"
            android:gravity="center"
            android:lineSpacingExtra="10dp"
            android:text="@string/cancel_order"
            android:textColor="@color/colorBlack"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_alertMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_cancel_Order"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/quicksand"
            android:gravity="center"
            android:text="@string/order_delete"
            android:textColor="@color/colorBlack"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/btn_yesCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_noCancel"
            android:background="@drawable/round_button_theam"
            android:gravity="center"
            android:padding="12dp"
            android:text="Yes, Cancel Order"
            android:textAllCaps="false"
            android:fontFamily="@font/quicksandbold"
            android:textColor="@color/colorWhite">

        </TextView>

        <TextView
            android:id="@+id/btn_noCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="No, I want to keep it."
            android:textAllCaps="false"
            android:fontFamily="@font/quicksandbold"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="15dp">

        </TextView>
    </RelativeLayout>
</RelativeLayout>