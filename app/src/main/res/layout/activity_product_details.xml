<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".views.Product_details">


    <include layout="@layout/toolbar_cart" android:id="@+id/product_detail_toolbar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="52dp"
        android:layout_below="@id/product_detail_toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/producatdetail_viewpager_layout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="@dimen/defaultmargin">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/product_detial_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </androidx.viewpager.widget.ViewPager>

                <LinearLayout
                    android:id="@+id/product_detail_dotlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="start"
                    android:orientation="horizontal"></LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/product_detial_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nike Shoes"
                android:textSize="@dimen/xlargetext"
                android:fontFamily="@font/quicksandbold"
                android:layout_marginLeft="@dimen/defaultmargin"
                android:layout_below="@id/producatdetail_viewpager_layout"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/defaultmargin"></TextView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/price_layout"
                android:layout_below="@id/product_detial_product_name">

                <TextView
                    android:id="@+id/producat_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$99"
                    android:textColor="@color/colorTheme"
                    android:textSize="@dimen/largetext"
                    android:fontFamily="@font/quicksand"
                    android:layout_marginLeft="@dimen/defaultmargin"
                    ></TextView>

                <TextView
                    android:id="@+id/product_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$199"
                    android:layout_toRightOf="@id/producat_detail_price"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/quicksand"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="12dp"></TextView>

            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_below="@id/price_layout"
                android:background="@color/colorgrey"
                android:layout_marginTop="@dimen/xmargin"></View>

            <RelativeLayout
                android:id="@+id/rating_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:layout_margin="@dimen/defaultmargin">

                <Button
                    android:id="@+id/product_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/theam_button"
                    android:text="4.5"
                    android:fontFamily="@font/quicksand"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/normaltext">

                </Button>

                <TextView
                    android:id="@+id/product_overallreview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Very Good"
                    android:textSize="@dimen/normaltext"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/quicksand"
                    android:layout_marginLeft="@dimen/defaultmargin"
                    android:layout_marginTop="@dimen/defaultmargin"
                    android:layout_toRightOf="@id/product_rating"
                    android:layout_centerVertical="true">

                </TextView>

                <TextView
                    android:id="@+id/product_total_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTheme"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="49 Reviews"
                    android:fontFamily="@font/quicksand"
                    android:textSize="@dimen/smalltext"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_arrowtheam"></TextView>
            </RelativeLayout>


            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_below="@id/rating_layout"
                android:background="@color/colorgrey"></View>


            <TextView
                android:id="@+id/desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xmargin"
                android:text="Description"
                android:layout_below="@id/view1"
                android:layout_marginLeft="@dimen/defaultmargin"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/quicksandbold"
                android:textSize="@dimen/normaltext"></TextView>

            <com.borjabravo.readmoretextview.ReadMoreTextView
                android:id="@+id/decripition_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:trimExpandedText="More"
                app:trimCollapsedText="Less"
                android:layout_below="@id/desc_tv"
                app:trimMode="trimModeLength"
                android:layout_margin="@dimen/defaultmargin"
                app:trimLength="150"
                android:fontFamily="@font/quicksand"
                app:colorClickableText="@color/colorTheme"
                android:text="@string/decs" />



            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_below="@id/decripition_tv"
                android:layout_marginTop="@dimen/defaultmargin"
                android:background="@color/colorgrey"></View>

            <LinearLayout
                android:id="@+id/size_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_below="@id/view2"
                android:layout_marginTop="@dimen/defaultmargin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/select_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Select Size"
                    android:gravity="center"
                    android:textColor="@color/colorBlack">

                </TextView>

                <TextView
                    android:id="@+id/select_colour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Select Colour"
                    android:textColor="@color/colorBlack">

                </TextView>
            </LinearLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_below="@id/size_layout"
                android:layout_marginTop="@dimen/defaultmargin"
                android:background="@color/colorgrey"></View>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view3"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/defaultmargin">


                <Button
                    android:id="@+id/size_s"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@color/colorgrey"
                    android:text="S"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/quicksandbold"></Button>

                <Button
                    android:id="@+id/size_M"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@color/colorgrey"
                    android:text="M"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/quicksandbold"></Button>

                <Button
                    android:id="@+id/size_L"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_margin="5dp"
                    android:background="@color/colorgrey"
                    android:text="L"
                    android:fontFamily="@font/quicksandbold"></Button>

                <Button
                    android:id="@+id/size_XXL"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_margin="5dp"
                    android:background="@color/colorgrey"
                    android:text="XXL"
                    android:fontFamily="@font/quicksandbold"></Button>
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorTheme"
            android:text="Add to cart"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/quicksand"
            android:layout_weight="1"></Button>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBlack"
            android:text="Add to wishlist"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/quicksand"
            android:layout_weight="1"></Button>
    </LinearLayout>

</RelativeLayout>